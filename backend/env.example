# Server Configuration
# Change PORT to match your backend server port (default: 8000)
HOST=0.0.0.0
PORT=9000
DEBUG=True

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=company_profiles_db

# For MongoDB Atlas (Cloud):
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# For MongoDB with Authentication:
# MONGODB_URL=mongodb://username:password@localhost:27017/dbname

# CORS Origins (comma-separated)
# Add your frontend URLs here (including network IP if accessing from other devices)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://192.168.18.15:5173

# API Keys
# Get your free API key from https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here

# Optional: Polygon.io API Key
# POLYGON_API_KEY=your_polygon_api_key_here

# Optional: Gemini Scraper Configuration
# GEMINI_HEADLESS=true (default: true, set to "false" only if you have a display/X server)
# Note: On servers without a display, this will automatically be set to true

